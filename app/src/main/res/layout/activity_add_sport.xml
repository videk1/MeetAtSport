<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_sport"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ravnik.org.meetatsport.AddSportActivity">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:id="@+id/tw_current_mail"
        android:layout_alignParentEnd="true"
        android:textColor="#3b5998"
        android:textSize="20sp"
        android:paddingBottom="10dp"/>

    <TextView
        android:text="Število trenutnih igralcev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tw_current_mail"
        android:layout_alignParentStart="true"
        android:id="@+id/tw_current_players"
        android:layout_alignParentEnd="true"
        android:textSize="16sp"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tw_current_players"
        android:layout_alignParentStart="true"
        android:entries="@array/number_array"
        android:id="@+id/spinner_current"/>

    <TextView
        android:text="Število potrebnih igralcev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_current"
        android:layout_alignParentStart="true"
        android:id="@+id/tw_needed_players"
        android:layout_alignParentEnd="true"
        android:textSize="16sp"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tw_needed_players"
        android:layout_alignParentStart="true"
        android:entries="@array/number_array"
        android:id="@+id/spinner_needed"/>

    <TextView
        android:text="Kontaktna številka:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_needed"
        android:layout_alignParentStart="true"
        android:id="@+id/tw_info"
        android:layout_alignParentEnd="true"
        android:textSize="16sp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/editText"
        android:text="051602367"
        android:layout_alignBaseline="@+id/tw_info"
        android:layout_alignBottom="@+id/tw_info"
        android:layout_alignParentStart="true"
        android:layout_marginStart="142dp"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:text="Lokacija:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true"
        android:id="@+id/tw_location"
        android:layout_alignParentEnd="true"
        android:textSize="16sp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText4"
        android:textSize="16sp"
        android:layout_below="@+id/tw_info"
        android:layout_alignStart="@+id/editText"
        android:layout_alignParentEnd="true"/>

    <Button
        android:text="POTRDi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText4"
        android:layout_alignParentStart="true"
        android:id="@+id/buttonAddSport"
        android:onClick="OnAddSportButtonClick"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
