<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CreateAcountActivity"
    >

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/etCreateEmail"
        android:textSize="20sp"
        android:hint="E-mail"
        android:layout_below="@+id/etCreateAge"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etCreatePassword"
        android:hint="Geslo"
        android:textSize="20sp"
        android:layout_below="@+id/etCreateEmail"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/etCreateEmail"/>

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerCreateGender"
        android:entries="@array/gender_array"
        android:textSize="20sp"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/etCreatePassword"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Potrdi"
        android:height="70dp"
        android:id="@+id/btnCreatePotrdi"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:onClick="btnCreatePotrdiClicked"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/etCreateAge"
        android:textSize="20sp"
        android:hint="Starost"
        android:layout_below="@+id/etCreateName"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etCreateName"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:hint="Ime"
        android:textSize="20sp"/>

</RelativeLayout>
